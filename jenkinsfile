pipeline {
    agent any
    
    stages {
        stage('Build image') {
            steps {
                script {
                    sh '''
                        docker build -t mitya178/k8sapp:v1 .
                    '''
                }
            }
        }
        stage('Login in DockerHub') {
            steps {
                script {
                    sh '''
                        docker login -u mitya178
                    '''
                }
            }
        }
        stage('Push in Artifactory') {
            steps {
                script {
                    sh '''
                        docker push mitya178/k8sapp:v1
                    '''
                }
            }
        }
    }
}
